<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
    <persistence-unit name="helloworld">
        <non-jta-data-source>helloworld_db</non-jta-data-source>
    <class>hello.world.Data</class>
    <class>hello.world.Person</class>
    <!-- Added manual test entities so the schema generator can discover at least one JPA entity -->
    <class>hello.world.DataEntity</class>
    <class>hello.world.PersonEntity</class>
        <properties>
            <property name="hibernate.id.new_generator_mappings" value="false"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.id.new_generator_mappings" value="false"/>
        </properties>
    </persistence-unit>
</persistence>
